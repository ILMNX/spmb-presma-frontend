---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';

export const prerender = false;
---

<DashboardLayout title="Laporan Pendaftaran">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Laporan Pendaftaran</h1>
        <p class="text-gray-600 mt-1">Lihat dan export statistik pendaftaran per jurusan</p>
      </div>
    </div>

    <!-- Controls -->
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex flex-wrap gap-4 items-center justify-between">
        <div class="flex gap-3">
          <select id="filter-type" class="px-4 py-2 border border-gray-300 rounded-lg hidden">
            <option value="all">Semua Tipe</option>
            <option value="sma">SMA Saja</option>
            <option value="smk">SMK Saja</option>
          </select>
          <button id="btnRefresh" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Refresh
          </button>
        </div>
        <button id="btn-export" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Export PDF
        </button>
      </div>
    </div>

    <!-- Loading -->
    <div id="loading" class="text-center py-12">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto"></div>
      <p class="mt-4 text-gray-600">Memuat data...</p>
    </div>

    <!-- Error -->
    <div id="error" class="hidden bg-red-50 border border-red-200 rounded-lg p-4">
      <p class="text-red-800" id="error-text"></p>
    </div>

    <!-- Content -->
    <div id="content" class="hidden space-y-6">

      <!-- Stats Cards -->
      <div id="stats-grid" class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 text-white">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-100 text-sm">Total</p>
              <p id="stat-total" class="text-3xl font-bold">0</p>
            </div>
            <svg class="w-10 h-10 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
        </div>
        
        <div id="stat-sma-card" class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white hidden">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-100 text-sm">SMA</p>
              <p id="stat-sma" class="text-3xl font-bold">0</p>
            </div>
            <svg class="w-10 h-10 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
        </div>
        
        <div id="stat-smk-card" class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg shadow-lg p-6 text-white hidden">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-purple-100 text-sm">SMK</p>
              <p id="stat-smk" class="text-3xl font-bold">0</p>
            </div>
            <svg class="w-10 h-10 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg shadow-lg p-6 text-white">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-orange-100 text-sm">Lunas</p>
              <p id="stat-paid" class="text-3xl font-bold">0</p>
            </div>
            <svg class="w-10 h-10 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Charts -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Status Distribution -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold mb-4">Per Status</h3>
          <div class="h-64">
            <canvas id="statusChart"></canvas>
          </div>
        </div>
        
        <!-- Payment Distribution -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold mb-4">Per Pembayaran</h3>
          <div class="h-64">
            <canvas id="paymentChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b">
          <h3 class="text-lg font-semibold">Detail Statistik</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kategori</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jumlah</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Persentase</th>
              </tr>
            </thead>
            <tbody id="table-body" class="divide-y divide-gray-200">
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script>
  import { api } from '../../../lib/api';
  import Chart from 'chart.js/auto';
  
  interface RegistrationData {
    total: number;
    admin_school_type: string;
    by_type?: {
      sma?: number;
      smk?: number;
    };
    by_payment?: {
      paid?: number;
      unpaid?: number;
      pending?: number;
    };
    by_status?: {
      pending_payment?: number;
      payment_confirmed?: number;
      approved?: number;
      rejected?: number;
      draft?: number;
    };
  }

  let data: RegistrationData | null = null;
  let adminSchoolType: string | null = null;
  let statusChart: Chart | null = null;
  let paymentChart: Chart | null = null;

  async function loadData(): Promise<void> {
    show('loading');
    try {
      const response = await api.get('/api/admin/reports/summary');
      
      if (!response.data.success) throw new Error(response.data.message || 'Error loading data');

      data = response.data.data;
      adminSchoolType = response.data.data.admin_school_type;
      
      // Show/hide filter based on admin type
      const filterType = document.getElementById('filter-type');
      if (adminSchoolType === 'both' && filterType) {
        filterType.classList.remove('hidden');
      }
      
      render();
      renderCharts();
      show('content');
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : 'Unknown error';
      showError(errorMessage);
    } finally {
      hide('loading');
    }
  }

  function render(): void {
    if (!data) return;

    // Update stats based on admin permission
    const statTotal = document.getElementById('stat-total');
    const statPaid = document.getElementById('stat-paid');
    
    if (statTotal) statTotal.textContent = String(data.total || 0);
    if (statPaid) statPaid.textContent = String(data.by_payment?.paid || 0);

    // Show/hide type-specific stats
    const smaCard = document.getElementById('stat-sma-card');
    const smkCard = document.getElementById('stat-smk-card');
    const statSma = document.getElementById('stat-sma');
    const statSmk = document.getElementById('stat-smk');
    
    if (adminSchoolType === 'both') {
      smaCard?.classList.remove('hidden');
      smkCard?.classList.remove('hidden');
      if (statSma) statSma.textContent = String(data.by_type?.sma || 0);
      if (statSmk) statSmk.textContent = String(data.by_type?.smk || 0);
    } else if (adminSchoolType === 'sma') {
      smaCard?.classList.remove('hidden');
      smkCard?.classList.add('hidden');
      if (statSma) statSma.textContent = String(data.by_type?.sma || 0);
    } else if (adminSchoolType === 'smk') {
      smaCard?.classList.add('hidden');
      smkCard?.classList.remove('hidden');
      if (statSmk) statSmk.textContent = String(data.by_type?.smk || 0);
    }

    // Adjust grid columns based on visible cards
    const statsGrid = document.getElementById('stats-grid');
    if (statsGrid) {
      if (adminSchoolType === 'both') {
        statsGrid.className = 'grid grid-cols-1 md:grid-cols-4 gap-6';
      } else {
        statsGrid.className = 'grid grid-cols-1 md:grid-cols-3 gap-6';
      }
    }

    // Render table
    renderTable();
  }

  function renderCharts(): void {
    if (!data) return;

    // Status Chart
    const statusCanvas = document.getElementById('statusChart') as HTMLCanvasElement;
    if (statusCanvas) {
      if (statusChart) statusChart.destroy();
      
      const statuses = [
        { label: 'Pending', value: data.by_status?.pending_payment || 0, color: 'rgba(251, 191, 36, 0.8)' },
        { label: 'Confirmed', value: data.by_status?.payment_confirmed || 0, color: 'rgba(59, 130, 246, 0.8)' },
        { label: 'Approved', value: data.by_status?.approved || 0, color: 'rgba(34, 197, 94, 0.8)' },
        { label: 'Rejected', value: data.by_status?.rejected || 0, color: 'rgba(239, 68, 68, 0.8)' },
        { label: 'Draft', value: data.by_status?.draft || 0, color: 'rgba(156, 163, 175, 0.8)' }
      ];

      statusChart = new Chart(statusCanvas, {
        type: 'doughnut',
        data: {
          labels: statuses.map(s => s.label),
          datasets: [{
            data: statuses.map(s => s.value),
            backgroundColor: statuses.map(s => s.color),
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    }

    // Payment Chart
    const paymentCanvas = document.getElementById('paymentChart') as HTMLCanvasElement;
    if (paymentCanvas) {
      if (paymentChart) paymentChart.destroy();

      const payments = [
        { label: 'Lunas', value: data.by_payment?.paid || 0, color: 'rgba(34, 197, 94, 0.8)' },
        { label: 'Belum Bayar', value: data.by_payment?.unpaid || 0, color: 'rgba(239, 68, 68, 0.8)' },
        { label: 'Pending', value: data.by_payment?.pending || 0, color: 'rgba(251, 191, 36, 0.8)' }
      ];

      paymentChart = new Chart(paymentCanvas, {
        type: 'doughnut',
        data: {
          labels: payments.map(p => p.label),
          datasets: [{
            data: payments.map(p => p.value),
            backgroundColor: payments.map(p => p.color),
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    }
  }

  function renderTable(): void {
    const tbody = document.getElementById('table-body');
    if (!tbody || !data) return;
    
    tbody.innerHTML = '';

    const rows: [string, number][] = [
      ['Total', data.total]
    ];

    // Add type-specific rows based on permission
    if (adminSchoolType === 'both') {
      rows.push(['SMA', data.by_type?.sma || 0]);
      rows.push(['SMK', data.by_type?.smk || 0]);
    } else if (adminSchoolType === 'sma') {
      rows.push(['SMA', data.by_type?.sma || 0]);
    } else if (adminSchoolType === 'smk') {
      rows.push(['SMK', data.by_type?.smk || 0]);
    }

    // Add common rows
    rows.push(
      ['Paid', data.by_payment?.paid || 0],
      ['Unpaid', data.by_payment?.unpaid || 0],
      ['Pending Payment', data.by_status?.pending_payment || 0],
      ['Payment Confirmed', data.by_status?.payment_confirmed || 0],
      ['Approved', data.by_status?.approved || 0],
      ['Rejected', data.by_status?.rejected || 0],
      ['Draft', data.by_status?.draft || 0]
    );

    rows.forEach(([label, count]) => {
      const pct = data!.total > 0 ? ((count / data!.total) * 100).toFixed(1) : '0';
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td class="px-6 py-4 text-sm text-gray-900">${label}</td>
        <td class="px-6 py-4 text-sm text-gray-600">${count}</td>
        <td class="px-6 py-4 text-sm text-gray-600">${pct}%</td>
      `;
      tbody.appendChild(tr);
    });
  }

  async function exportPDF(): Promise<void> {
    const btn = document.getElementById('btn-export') as HTMLButtonElement | null;
    if (!btn) return;
    
    const originalText = btn.innerHTML;
    
    try {
      btn.disabled = true;
      btn.innerHTML = `
        <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Generating...
      `;

      const filterType = document.getElementById('filter-type') as HTMLSelectElement | null;
      const params = new URLSearchParams();
      
      if (filterType && filterType.value !== 'all') {
        params.append('school_type', filterType.value);
      }

      const response = await api.get(`/api/admin/reports/summary/export-pdf?${params}`, { responseType: 'blob' });

      const blob = new Blob([response.data], { type: 'application/pdf' });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `registration-report-${new Date().toISOString().split('T')[0]}.pdf`;
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
      document.body.removeChild(a);

    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : 'Unknown error';
      console.error('Export error:', err);
      alert('Gagal export PDF: ' + errorMessage);
    } finally {
      btn.disabled = false;
      btn.innerHTML = originalText;
    }
  }

  function show(id: string): void {
    ['loading', 'error', 'content'].forEach(el => {
      document.getElementById(el)?.classList.add('hidden');
    });
    document.getElementById(id)?.classList.remove('hidden');
  }

  function hide(id: string): void {
    document.getElementById(id)?.classList.add('hidden');
  }

  function showError(msg: string): void {
    const errorText = document.getElementById('error-text');
    if (errorText) errorText.textContent = msg;
    show('error');
  }

  document.addEventListener('DOMContentLoaded', () => {
    loadData();
    
    document.getElementById('btn-export')?.addEventListener('click', exportPDF);
    
    document.getElementById('filter-type')?.addEventListener('change', () => {
      // Optional: reload data when filter changes
      // loadData();
    });
  });
</script>