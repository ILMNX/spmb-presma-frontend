---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';

---

<DashboardLayout title="Content Management">
  <div class="space-y-8">
 

    <!-- Universities Section -->
    <div class="space-y-6">
      <!-- Header Actions -->
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Manage Universities</h3>
          <p class="mt-1 text-sm text-gray-500">Drag and drop to reorder university logos</p>
        </div>
        <div class="flex gap-3">
          <button
            id="previewUniversitiesBtn"
            class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            Preview Carousel
          </button>
          <button
            id="addUniversityBtn"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add University
          </button>
        </div>
      </div>

      <!-- Universities Grid -->
      <div id="universitiesList" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <!-- Loading State -->
        <div class="col-span-full flex justify-center py-12">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Highlight Modal -->
  <div id="highlightModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative bg-white rounded-lg shadow-xl max-w-2xl w-full">
        <div class="flex items-center justify-between p-6 border-b border-gray-200">
          <h3 id="highlightModalTitle" class="text-lg font-medium text-gray-900">Add Highlight</h3>
          <button id="closeHighlightModal" class="text-gray-400 hover:text-gray-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <form id="highlightForm" class="p-6 space-y-4">
          <input type="hidden" id="highlightId" name="id">
          
          <div>
            <label for="icon" class="block text-sm font-medium text-gray-700">Icon/Category</label>
            <input
              type="text"
              id="icon"
              name="icon"
              required
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              placeholder="e.g., Prestasi, Fasilitas Modern"
            >
          </div>

          <div>
            <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              required
              maxlength="255"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              placeholder="e.g., Prestasi Akademik Terbaik"
            >
          </div>

          <div>
            <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea
              id="description"
              name="description"
              required
              rows="4"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              placeholder="Enter detailed description..."
            ></textarea>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="order" class="block text-sm font-medium text-gray-700">Display Order</label>
              <input
                type="number"
                id="order"
                name="order"
                min="0"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                placeholder="0"
              >
            </div>

            <div class="flex items-center pt-6">
              <input
                type="checkbox"
                id="is_active"
                name="is_active"
                checked
                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
              >
              <label for="is_active" class="ml-2 block text-sm text-gray-900">Active</label>
            </div>
          </div>

          <div id="highlightFormError" class="hidden rounded-md bg-red-50 p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="ml-3">
                <p id="highlightFormErrorText" class="text-sm text-red-800"></p>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              id="cancelHighlightBtn"
              class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Save Highlight
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- University Modal -->
  <div id="universityModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative bg-white rounded-lg shadow-xl max-w-2xl w-full">
        <div class="flex items-center justify-between p-6 border-b border-gray-200">
          <h3 id="universityModalTitle" class="text-lg font-medium text-gray-900">Add University</h3>
          <button id="closeUniversityModal" class="text-gray-400 hover:text-gray-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <form id="universityForm" class="p-6 space-y-4">
          <input type="hidden" id="universityId" name="id">
          
          <div>
            <label for="universityName" class="block text-sm font-medium text-gray-700">University Name</label>
            <input
              type="text"
              id="universityName"
              name="name"
              required
              maxlength="255"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              placeholder="e.g., Universitas Indonesia"
            >
          </div>

          <div>
            <label for="universityLogo" class="block text-sm font-medium text-gray-700">Logo URL</label>
            <input
              type="text"
              id="universityLogo"
              name="logo"
              required
              maxlength="255"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
              placeholder="/images/universities/ui.webp"
            >
            <p class="mt-1 text-xs text-gray-500">Format: /images/universities/[university-code].webp</p>
          </div>

          <!-- Logo Preview -->
          <div id="logoPreviewContainer" class="hidden">
            <label class="block text-sm font-medium text-gray-700 mb-2">Logo Preview</label>
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 flex justify-center">
              <img id="logoPreview" src="" alt="Logo preview" class="max-w-32 max-h-32 object-contain">
            </div>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="universityOrder" class="block text-sm font-medium text-gray-700">Display Order</label>
              <input
                type="number"
                id="universityOrder"
                name="order"
                min="0"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                placeholder="0"
              >
            </div>

            <div class="flex items-center pt-6">
              <input
                type="checkbox"
                id="university_is_active"
                name="is_active"
                checked
                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
              >
              <label for="university_is_active" class="ml-2 block text-sm text-gray-900">Active</label>
            </div>
          </div>

          <div id="universityFormError" class="hidden rounded-md bg-red-50 p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="ml-3">
                <p id="universityFormErrorText" class="text-sm text-red-800"></p>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              id="cancelUniversityBtn"
              class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Save University
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative bg-white rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="sm:flex sm:items-start">
          <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
            <h3 class="text-lg font-medium text-gray-900">Delete <span id="deleteItemType">Item</span></h3>
            <p class="mt-2 text-sm text-gray-500">Are you sure you want to delete this item? This action cannot be undone.</p>
          </div>
        </div>
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
          <button
            id="confirmDelete"
            class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm"
          >
            Delete
          </button>
          <button
            id="cancelDelete"
            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:w-auto sm:text-sm"
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Preview Modal -->
  <div id="previewModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-95 overflow-y-auto z-50">
    <div class="min-h-full p-4">
      <div class="flex justify-end mb-4">
        <button id="closePreview" class="text-white hover:text-gray-300">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div id="previewContent" class="bg-white rounded-lg p-8">
        <!-- Preview content will be injected here -->
      </div>
    </div>
  </div>
</DashboardLayout>

<script>
  import { api } from '../../../lib/api';
  import Sortable from 'sortablejs';

  interface Highlight {
    id: number;
    icon: string;
    title: string;
    description: string;
    order: number;
    is_active: boolean;
  }

  interface University {
    id: number;
    name: string;
    logo: string;
    order: number;
    is_active: boolean;
  }

  let highlights: Highlight[] = [];
  let universities: University[] = [];
  let deleteId: number | null = null;
  let deleteType: 'highlight' | 'university' = 'highlight';
  let highlightsSortable: Sortable | null = null;
  let universitiesSortable: Sortable | null = null;

  // DOM Elements
  const highlightsList = document.getElementById('highlightsList')!;
  const universitiesList = document.getElementById('universitiesList')!;
  const highlightModal = document.getElementById('highlightModal')!;
  const universityModal = document.getElementById('universityModal')!;
  const deleteModal = document.getElementById('deleteModal')!;
  const previewModal = document.getElementById('previewModal')!;
  const highlightForm = document.getElementById('highlightForm') as HTMLFormElement;
  const universityForm = document.getElementById('universityForm') as HTMLFormElement;

  // Load data
  async function loadHighlights() {
    try {
      const response = await api.get('/api/highlights');
      highlights = response.data.data;
      renderHighlights();
      initHighlightsSortable();
    } catch (error) {
      console.error('Failed to load highlights:', error);
      showError(highlightsList, 'Failed to load highlights');
    }
  }

  async function loadUniversities() {
    try {
      const response = await api.get('/api/universities');
      universities = response.data.data;
      renderUniversities();
      initUniversitiesSortable();
    } catch (error) {
      console.error('Failed to load universities:', error);
      showError(universitiesList, 'Failed to load universities');
    }
  }

  // Render functions
  function renderHighlights() {
    if (highlights.length === 0) {
      highlightsList.innerHTML = `
        <div class="col-span-full text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <p class="mt-2 text-sm text-gray-500">No highlights yet. Click "Add Highlight" to create one.</p>
        </div>
      `;
      return;
    }

    highlightsList.innerHTML = highlights.map(highlight => `
      <div class="highlight-item bg-white rounded-lg shadow-sm border-2 border-gray-200 overflow-hidden cursor-move hover:border-blue-400 transition-colors" data-id="${highlight.id}">
        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-gray-400 cursor-grab active:cursor-grabbing" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
              </svg>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                ${highlight.icon}
              </span>
              ${highlight.is_active 
                ? '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>'
                : '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>'
              }
            </div>
          </div>
          <h4 class="text-lg font-medium text-gray-900 mb-2">${highlight.title}</h4>
          <p class="text-sm text-gray-500 line-clamp-3">${highlight.description}</p>
          <p class="text-xs text-gray-400 mt-2">Order: ${highlight.order}</p>
        </div>
        <div class="bg-gray-50 px-6 py-3 flex justify-end space-x-2">
          <button
            onclick="editHighlight(${highlight.id})"
            class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit
          </button>
          <button
            onclick="showDeleteModal('highlight', ${highlight.id})"
            class="inline-flex items-center px-3 py-1.5 border border-transparent shadow-sm text-xs font-medium rounded text-white bg-red-600 hover:bg-red-700"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete
          </button>
        </div>
      </div>
    `).join('');
  }

  function renderUniversities() {
    if (universities.length === 0) {
      universitiesList.innerHTML = `
        <div class="col-span-full text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <p class="mt-2 text-sm text-gray-500">No universities yet. Click "Add University" to create one.</p>
        </div>
      `;
      return;
    }

    universitiesList.innerHTML = universities.map(uni => `
      <div class="university-item bg-white rounded-lg shadow-sm border-2 border-gray-200 p-4 cursor-move hover:border-blue-400 transition-colors" data-id="${uni.id}">
        <div class="flex items-center justify-center mb-3">
          <svg class="w-4 h-4 text-gray-400 cursor-grab active:cursor-grabbing" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
          </svg>
        </div>
        <div class="aspect-square flex items-center justify-center mb-3 bg-gray-50 rounded-lg">
          <img src="${uni.logo}" alt="${uni.name}" class="max-w-full max-h-24 object-contain" onerror="this.src='https://via.placeholder.com/150?text=No+Image'">
        </div>
        <p class="text-xs text-center font-medium text-gray-900 line-clamp-2 mb-2">${uni.name}</p>
        <div class="flex justify-center mb-3">
          ${uni.is_active 
            ? '<span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>'
            : '<span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>'
          }
        </div>
        <p class="text-xs text-center text-gray-400 mb-3">Order: ${uni.order}</p>
        <div class="flex gap-1">
          <button
            onclick="editUniversity(${uni.id})"
            class="flex-1 inline-flex items-center justify-center px-2 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50"
          >
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </button>
          <button
            onclick="showDeleteModal('university', ${uni.id})"
            class="flex-1 inline-flex items-center justify-center px-2 py-1.5 border border-transparent shadow-sm text-xs font-medium rounded text-white bg-red-600 hover:bg-red-700"
          >
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          </button>
        </div>
      </div>
    `).join('');
  }

  // Initialize Sortable
  function initHighlightsSortable() {
    if (highlightsSortable) {
      highlightsSortable.destroy();
    }

    highlightsSortable = new Sortable(highlightsList, {
      animation: 150,
      handle: '.highlight-item',
      ghostClass: 'opacity-50',
      onEnd: async () => {
        const items = highlightsList.querySelectorAll('.highlight-item');
        const newOrder = Array.from(items).map((item, index) => ({
          id: parseInt(item.getAttribute('data-id')!),
          order: index
        }));

        try {
          await api.post('/api/highlights/reorder', { highlights: newOrder });
          await loadHighlights();
        } catch (error) {
          console.error('Failed to update order:', error);
          alert('Failed to update order');
        }
      }
    });
  }

  function initUniversitiesSortable() {
    if (universitiesSortable) {
      universitiesSortable.destroy();
    }

    universitiesSortable = new Sortable(universitiesList, {
      animation: 150,
      handle: '.university-item',
      ghostClass: 'opacity-50',
      onEnd: async () => {
        const items = universitiesList.querySelectorAll('.university-item');
        const newOrder = Array.from(items).map((item, index) => ({
          id: parseInt(item.getAttribute('data-id')!),
          order: index
        }));

        try {
          await api.post('/api/universities/reorder', { universities: newOrder });
          await loadUniversities();
        } catch (error) {
          console.error('Failed to update order:', error);
          alert('Failed to update order');
        }
      }
    });
  }

  // Modal functions
  function showHighlightModal(highlight?: Highlight) {
    document.getElementById('highlightFormError')!.classList.add('hidden');
    highlightForm.reset();
    
    if (highlight) {
      document.getElementById('highlightModalTitle')!.textContent = 'Edit Highlight';
      (document.getElementById('highlightId') as HTMLInputElement).value = String(highlight.id);
      (document.getElementById('icon') as HTMLInputElement).value = highlight.icon;
      (document.getElementById('title') as HTMLInputElement).value = highlight.title;
      (document.getElementById('description') as HTMLTextAreaElement).value = highlight.description;
      (document.getElementById('order') as HTMLInputElement).value = String(highlight.order);
      (document.getElementById('is_active') as HTMLInputElement).checked = highlight.is_active;
    } else {
      document.getElementById('highlightModalTitle')!.textContent = 'Add Highlight';
      (document.getElementById('highlightId') as HTMLInputElement).value = '';
    }
    
    highlightModal.classList.remove('hidden');
  }

  function showUniversityModal(university?: University) {
    document.getElementById('universityFormError')!.classList.add('hidden');
    universityForm.reset();
    document.getElementById('logoPreviewContainer')!.classList.add('hidden');
    
    if (university) {
      document.getElementById('universityModalTitle')!.textContent = 'Edit University';
      (document.getElementById('universityId') as HTMLInputElement).value = String(university.id);
      (document.getElementById('universityName') as HTMLInputElement).value = university.name;
      (document.getElementById('universityLogo') as HTMLInputElement).value = university.logo;
      (document.getElementById('universityOrder') as HTMLInputElement).value = String(university.order);
      (document.getElementById('university_is_active') as HTMLInputElement).checked = university.is_active;
      
      // Show preview
      showLogoPreview(university.logo);
    } else {
      document.getElementById('universityModalTitle')!.textContent = 'Add University';
      (document.getElementById('universityId') as HTMLInputElement).value = '';
    }
    
    universityModal.classList.remove('hidden');
  }

  function showLogoPreview(url: string) {
    const preview = document.getElementById('logoPreview') as HTMLImageElement;
    const container = document.getElementById('logoPreviewContainer')!;
    preview.src = url;
    preview.onerror = () => {
      preview.src = 'https://via.placeholder.com/150?text=Invalid+URL';
    };
    container.classList.remove('hidden');
  }

  // Global functions
  (window as any).editHighlight = (id: number) => {
    const highlight = highlights.find(h => h.id === id);
    if (highlight) showHighlightModal(highlight);
  };

  (window as any).editUniversity = (id: number) => {
    const university = universities.find(u => u.id === id);
    if (university) showUniversityModal(university);
  };

  (window as any).showDeleteModal = (type: 'highlight' | 'university', id: number) => {
    deleteType = type;
    deleteId = id;
    document.getElementById('deleteItemType')!.textContent = type === 'highlight' ? 'Highlight' : 'University';
    deleteModal.classList.remove('hidden');
  };

  // Form submissions
  highlightForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formError = document.getElementById('highlightFormError')!;
    formError.classList.add('hidden');

    const formData = new FormData(highlightForm);
    const id = formData.get('id');
    
    const data = {
      icon: formData.get('icon'),
      title: formData.get('title'),
      description: formData.get('description'),
      order: formData.get('order') ? parseInt(formData.get('order') as string) : 0,
      is_active: (document.getElementById('is_active') as HTMLInputElement).checked
    };

    try {
      if (id) {
        await api.put(`/api/highlights/${id}`, data);
      } else {
        await api.post('/api/highlights', data);
      }
      
      highlightModal.classList.add('hidden');
      await loadHighlights();
    } catch (error: any) {
      document.getElementById('highlightFormErrorText')!.textContent = error.response?.data?.message || 'Failed to save highlight';
      formError.classList.remove('hidden');
    }
  });

  universityForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formError = document.getElementById('universityFormError')!;
    formError.classList.add('hidden');

    const formData = new FormData(universityForm);
    const id = formData.get('id');
    
    const data = {
      name: formData.get('name'),
      logo: formData.get('logo'),
      order: formData.get('order') ? parseInt(formData.get('order') as string) : 0,
      is_active: (document.getElementById('university_is_active') as HTMLInputElement).checked
    };

    try {
      if (id) {
        await api.put(`/api/universities/${id}`, data);
      } else {
        await api.post('/api/universities', data);
      }
      
      universityModal.classList.add('hidden');
      await loadUniversities();
    } catch (error: any) {
      document.getElementById('universityFormErrorText')!.textContent = error.response?.data?.message || 'Failed to save university';
      formError.classList.remove('hidden');
    }
  });

  // Delete confirmation
  document.getElementById('confirmDelete')?.addEventListener('click', async () => {
    if (!deleteId) return;

    try {
      if (deleteType === 'highlight') {
        await api.delete(`/api/highlights/${deleteId}`);
        await loadHighlights();
      } else {
        await api.delete(`/api/universities/${deleteId}`);
        await loadUniversities();
      }
      deleteModal.classList.add('hidden');
    } catch (error) {
      console.error('Failed to delete:', error);
      alert('Failed to delete item');
    }
  });

  // Preview functions
  document.getElementById('previewHighlightsBtn')?.addEventListener('click', () => {
    const activeHighlights = highlights.filter(h => h.is_active);
    const previewContent = document.getElementById('previewContent')!;
    
    previewContent.innerHTML = `
      <h2 class="text-3xl font-bold text-center mb-8">Highlights Preview</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        ${activeHighlights.map(h => `
          <div class="text-center p-6 bg-gray-50 rounded-lg">
            <div class="text-blue-600 font-semibold mb-2">${h.icon}</div>
            <h3 class="text-xl font-bold mb-2">${h.title}</h3>
            <p class="text-gray-600">${h.description}</p>
          </div>
        `).join('')}
      </div>
    `;
    
    previewModal.classList.remove('hidden');
  });

  document.getElementById('previewUniversitiesBtn')?.addEventListener('click', () => {
    const activeUniversities = universities.filter(u => u.is_active);
    const previewContent = document.getElementById('previewContent')!;
    
    const allUnis = [...activeUniversities, ...activeUniversities, ...activeUniversities];
    
    previewContent.innerHTML = `
      <h2 class="text-3xl font-bold text-center mb-8">University Carousel Preview</h2>
      <div class="overflow-hidden">
        <div class="flex gap-12 items-center animate-scroll">
          ${allUnis.map(u => `
            <div class="flex-shrink-0">
              <img src="${u.logo}" alt="${u.name}" class="w-32 h-32 object-contain grayscale hover:grayscale-0 transition-all" title="${u.name}">
            </div>
          `).join('')}
        </div>
      </div>
      <style>
        @keyframes scroll {
          0% { transform: translateX(0); }
          100% { transform: translateX(-33.333%); }
        }
        .animate-scroll {
          animation: scroll 20s linear infinite;
        }
        .animate-scroll:hover {
          animation-play-state: paused;
        }
      </style>
    `;
    
    previewModal.classList.remove('hidden');
  });

  // Logo preview on input
  document.getElementById('universityLogo')?.addEventListener('input', (e) => {
    const url = (e.target as HTMLInputElement).value;
    if (url) {
      showLogoPreview(url);
    }
  });

  // Event listeners
  document.getElementById('addHighlightBtn')?.addEventListener('click', () => showHighlightModal());
  document.getElementById('addUniversityBtn')?.addEventListener('click', () => showUniversityModal());
  document.getElementById('closeHighlightModal')?.addEventListener('click', () => highlightModal.classList.add('hidden'));
  document.getElementById('closeUniversityModal')?.addEventListener('click', () => universityModal.classList.add('hidden'));
  document.getElementById('cancelHighlightBtn')?.addEventListener('click', () => highlightModal.classList.add('hidden'));
  document.getElementById('cancelUniversityBtn')?.addEventListener('click', () => universityModal.classList.add('hidden'));
  document.getElementById('cancelDelete')?.addEventListener('click', () => deleteModal.classList.add('hidden'));
  document.getElementById('closePreview')?.addEventListener('click', () => previewModal.classList.add('hidden'));

  // Helper functions
  function showError(element: HTMLElement, message: string) {
    element.innerHTML = `
      <div class="col-span-full text-center py-12">
        <svg class="mx-auto h-12 w-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500">${message}</p>
      </div>
    `;
  }

  // Initialize
  loadHighlights();
  loadUniversities();
</script>

