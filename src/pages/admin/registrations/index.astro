  // Confirm cash payment
  async function confirmCashPayment(id: number) {
    try {
      log('Confirming cash payment for ID:', id);
      
      // Get form values
      const amountInput = document.getElementById('paymentAmount') as HTMLInputElement;
      const notesInput = document.getElementById('paymentNotes') as HTMLTextAreaElement;
      const amount = parseFloat(amountInput.value);
      const notes = notesInput.value;

      if (!amount || amount <= 0) {
        alert('Jumlah pembayaran tidak valid');
        return;
      }

      const token = getToken();
      const response = await fetch(`${API_BASE_URL}/api/admin/registrations/${id}/confirm-cash-payment`, {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          amount: amount,
          notes: notes
        })
      });

      if (!response.ok) {
        throw new Error(`HTTP ${response.status}`);
      }
      
      const result = await response.json();
      log('Cash payment confirmation response:', result);

      if (result.success) {
        alert('Pembayaran tunai berhasil dikonfirmasi!');
        document.getElementById('detailModal')!.classList.add('hidden');
        loadStatistics();
        loadRegistrations(currentPage);
      } else {
        alert('Gagal mengkonfirmasi pembayaran: ' + result.message);
      }
    } catch (err: any) {
      console.error('Failed to confirm cash payment:', err);
      alert('Terjadi kesalahan saat mengkonfirmasi pembayaran');
    }
  }

