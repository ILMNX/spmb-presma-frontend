    document.getElementById('searchInput')!.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = window.setTimeout(() => {
        currentFilters.search = (e.target as HTMLInputElement).value;
        currentPage = 1;
        loadRegistrations();
      }, 500);
    });

