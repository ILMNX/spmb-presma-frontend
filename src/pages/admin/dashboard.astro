---
import AdminLayout from '../../layouts/DashboardLayout.astro';
---

<AdminLayout title="Admin Dashboard">
  <div class="p-6">
    <h1 class="text-3xl font-bold mb-6">Dashboard Admin</h1>
    <p class="text-gray-500 mb-6">Selamat datang di dashboard admin. Gunakan menu di sidebar untuk navigasi.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-gradient-to-br from-blue-500 to-blue-700 rounded-lg shadow-md p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
        <h3 class="text-sm font-medium text-blue-100 mb-2">Total Pendaftaran</h3>
        <p id="total-registrations" class="text-3xl font-bold text-white">
          <span class="loading-spinner">...</span>
        </p>
        </div>
        <div class="p-3 bg-white/20 rounded-full">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        </div>
      </div>
      <p class="text-xs text-blue-100 mt-2">
        <span id="recent-registrations" class="font-semibold text-yellow-300">0</span> pendaftaran minggu ini
      </p>
      </div>
      
      <div class="bg-gradient-to-br from-emerald-500 to-green-700 rounded-lg shadow-md p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
        <h3 class="text-sm font-medium text-emerald-100 mb-2">Pendaftar SMA</h3>
        <p id="sma-registrations" class="text-3xl font-bold text-white">
          <span class="loading-spinner">...</span>
        </p>
        </div>
        <div class="p-3 bg-white/20 rounded-full">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        </div>
      </div>
      <p class="text-xs text-emerald-100 mt-2">Jalur SMA</p>
      </div>
      
      <div class="bg-gradient-to-br from-purple-500 to-indigo-700 rounded-lg shadow-md p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
        <h3 class="text-sm font-medium text-purple-100 mb-2">Pendaftar SMK</h3>
        <p id="smk-registrations" class="text-3xl font-bold text-white">
          <span class="loading-spinner">...</span>
        </p>
        </div>
        <div class="p-3 bg-white/20 rounded-full">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
        </svg>
        </div>
      </div>
      <p class="text-xs text-purple-100 mt-2">Jalur SMK</p>
      </div>

      <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-lg shadow-md p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
        <h3 class="text-sm font-medium text-orange-100 mb-2">Menunggu Pembayaran</h3>
        <p id="pending-payment" class="text-3xl font-bold text-white">
          <span class="loading-spinner">...</span>
        </p>
        </div>
        <div class="p-3 bg-white/20 rounded-full">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        </div>
      </div>
      <p class="text-xs text-orange-100 mt-2">Perlu konfirmasi pembayaran</p>
      </div>
    </div>

    <!-- Additional Statistics -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold mb-4">Status Pendaftaran</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Pembayaran Dikonfirmasi</span>
            <span id="payment-confirmed" class="text-sm font-semibold text-blue-600">0</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Diterima</span>
            <span id="approved" class="text-sm font-semibold text-green-600">0</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Ditolak</span>
            <span id="rejected" class="text-sm font-semibold text-red-600">0</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Draft</span>
            <span id="draft" class="text-sm font-semibold text-gray-600">0</span>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold mb-4">Status Pembayaran</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Sudah Bayar</span>
            <span id="paid" class="text-sm font-semibold text-green-600">0</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Belum Bayar</span>
            <span id="unpaid" class="text-sm font-semibold text-orange-600">0</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Error Message -->
    <div id="error-message" class="hidden mt-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg" role="alert">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <span id="error-text">Gagal memuat data statistik. Silakan refresh halaman.</span>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  import { initAuth, getToken, clearAuth } from '../../stores/authStore';
  import { initAuthGuard } from '../../utils/authGuard';

  const API_BASE_URL = import.meta.env.PUBLIC_API_URL;

  // Helper function to safely update element text
  function updateElement(id: string, value: string | number) {
    const element = document.getElementById(id);
    if (element) {
      element.textContent = String(value);
    }
  }

  // Helper function to show error
  function showError(message: string) {
    const errorDiv = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    
    if (errorDiv && errorText) {
      errorText.textContent = message;
      errorDiv.classList.remove('hidden');
    }
  }

  // Helper function to hide error
  function hideError() {
    const errorDiv = document.getElementById('error-message');
    if (errorDiv) {
      errorDiv.classList.add('hidden');
    }
  }

  // Fetch statistics from backend
  async function fetchStatistics() {
    try {
      hideError();
      
      // Get token from secure store
      const token = getToken();
      
      if (!token) {
        throw new Error('Token tidak ditemukan. Silakan login kembali.');
      }

      // Use the correct endpoint from api.php: /api/admin/registrations/statistics
      const url = `${API_BASE_URL}/api/admin/registrations/statistics`;

      const response = await fetch(url, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        credentials: 'include'
      });

      if (!response.ok) {
        if (response.status === 401) {
          // Unauthorized - clear auth and redirect to login
          clearAuth();
          window.location.href = '/login';
          return;
        }
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const result = await response.json();

      if (!result.success) {
        throw new Error(result.message || 'Gagal mengambil data statistik');
      }

      const data = result.data;

      // Update dashboard elements safely
      updateElement('total-registrations', data.total || 0);
      updateElement('sma-registrations', data.by_type?.SMA || 0);
      updateElement('smk-registrations', data.by_type?.SMK || 0);
      updateElement('recent-registrations', data.recent || 0);
      
      // Status counts
      updateElement('pending-payment', data.by_status?.pending_payment || 0);
      updateElement('payment-confirmed', data.by_status?.payment_confirmed || 0);
      updateElement('approved', data.by_status?.approved || 0);
      updateElement('rejected', data.by_status?.rejected || 0);
      updateElement('draft', data.by_status?.draft || 0);
      
      // Payment counts
      updateElement('paid', data.by_payment?.paid || 0);
      updateElement('unpaid', data.by_payment?.unpaid || 0);

    } catch (error) {
      console.error('Error fetching statistics:', error);
      
      // Show error message
      const errorMessage = error instanceof Error 
        ? error.message 
        : 'Gagal memuat data statistik. Silakan refresh halaman.';
      
      showError(errorMessage);
      
      // Set all values to error state
      const ids = [
        'total-registrations', 'sma-registrations', 'smk-registrations',
        'recent-registrations', 'pending-payment', 'payment-confirmed',
        'approved', 'rejected', 'draft', 'paid', 'unpaid'
      ];
      
      ids.forEach(id => updateElement(id, '-'));
    }
  }

  // Initialize auth and fetch data when page loads
  document.addEventListener('DOMContentLoaded', () => {
    initAuth();
    initAuthGuard();

    setTimeout(() => {
      fetchStatistics();
    }, 100);
  });

  // Optional: Auto-refresh statistics every 30 seconds
  setInterval(() => {
    fetchStatistics();
  }, 30000);
</script>

<style>
  .loading-spinner {
    display: inline-block;
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>