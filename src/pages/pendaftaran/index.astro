---

import Layout from '../../layouts/Layout.astro';
import Footer from "../../components/Footer.astro";
---

<Layout title="Pendaftaran - SPMB Prestasi Prima">
  <main class="relative min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-6 md:py-12">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <img src="/images/sekolah_ls.webp" alt="Background Sekolah" class="w-full h-full object-cover object-center" />
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </div>
    <!-- Back to Home Button (responsive position) -->
    <a href="/" aria-label="Kembali ke Beranda"
      class="inline-flex items-center gap-2 px-3 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition
        fixed left-4 top-4 z-20 md:absolute md:left-6 md:top-6 md:mb-6"
      style="backdrop-filter: blur(2px);">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
      </svg>
      <span class="hidden sm:inline">Beranda</span>
    </a>
    <!-- Content -->
    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6">
      <!-- Header -->
    <div class="text-center mb-8 md:mb-12 mt-10 md:mt-8">
      <h1 class="text-3xl md:text-5xl font-bold text-white mb-3 md:mb-4">
        Pendaftaran Siswa Baru
      </h1>
      <p class="text-base md:text-xl text-white max-w-2xl mx-auto">
        Pilih jenjang pendidikan yang sesuai dengan minat dan bakat Anda
      </p>
    </div>

      <!-- Cards Container -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-4xl mx-auto">
        
        <!-- SMA Card -->
        <div class="group cursor-pointer col-span-1" style="min-width:220px;" onclick="window.location.href='/pendaftaran/sma'">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 hover:border-purple-200">
            <div class="bg-gradient-to-r from-purple-500 to-purple-700 p-6 md:p-8 rounded-t-2xl text-white">
              <div class="flex items-center justify-center mb-3 md:mb-4">
                <div class="bg-white bg-opacity-20 p-3 md:p-4 rounded-full">
                  <img src="/logo/sma.png" alt="Logo SMA" class="w-20 h-20 md:w-24 md:h-24 object-contain" />
                </div>
              </div>
              <h2 class="text-2xl md:text-3xl font-bold text-center mb-1 md:mb-2">SMA Prestasi Prima</h2>
              <p class="text-white text-center text-sm md:text-base">Sekolah Menengah Atas</p>
            </div>
            <div class="p-6 md:p-8">
              <div class="space-y-3 md:space-y-4 mb-4 md:mb-6">
                <div class="flex items-center text-gray-600 text-sm md:text-base">
                  <svg class="w-5 h-5 text-purple-500 mr-2 md:mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                  </svg>
                  <span>Program IPA & IPS</span>
                </div>
                <div class="flex items-center text-gray-600 text-sm md:text-base">
                  <svg class="w-5 h-5 text-red-500 mr-2 md:mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                  </svg>
                  <span>Persiapan Perguruan Tinggi</span>
                </div>
                <div class="flex items-center text-gray-600 text-sm md:text-base">
                  <svg class="w-5 h-5 text-blue-500 mr-2 md:mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                  </svg>
                  <span>Kurikulum Merdeka</span>
                </div>
              </div>
              <button class="w-full bg-purple-600 hover:bg-purple-700 text-white py-2 md:py-3 px-4 md:px-6 rounded-lg font-semibold transition-colors duration-300 group-hover:shadow-lg text-sm md:text-base">
                Daftar SMA
                <svg class="w-5 h-5 ml-2 inline" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4 11V13H16L10.5 18.5L11.92 19.92L19.84 12L11.92 4.08L10.5 5.5L16 11H4Z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- SMK Card -->
        <div class="group cursor-pointer col-span-1" style="min-width:220px;" onclick="window.location.href='/pendaftaran/smk'">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 hover:border-orange-200">
            <div class="bg-gradient-to-r from-orange-500 to-red-500 p-6 md:p-8 rounded-t-2xl text-white">
              <div class="flex items-center justify-center mb-3 md:mb-4">
                <div class="bg-white bg-opacity-20 p-3 md:p-4 rounded-full">
                  <img src="/logo/smk.png" alt="Logo SMK" class="w-20 h-20 md:w-24 md:h-24 object-contain"  />
                </div>
              </div>
              <h2 class="text-2xl md:text-3xl font-bold text-center mb-1 md:mb-2">SMK Prestasi Prima</h2>
              <p class="text-orange-100 text-center text-sm md:text-base">Sekolah Menengah Kejuruan</p>
            </div>
            <div class="p-6 md:p-8">
              <div class="space-y-3 md:space-y-4 mb-4 md:mb-6">
                <div class="flex items-center text-gray-600 text-sm md:text-base">
                  <svg class="w-5 h-5 text-orange-500 mr-2 md:mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                  </svg>
                  <span>4 Kompetensi Keahlian</span>
                </div>
                <div class="flex items-center text-gray-600 text-sm md:text-base">
                  <svg class="w-5 h-5 text-red-500 mr-2 md:mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                  </svg>
                  <span>Siap Kerja & Wirausaha</span>
                </div>
                <div class="flex items-center text-gray-600 text-sm md:text-base">
                  <svg class="w-5 h-5 text-blue-500 mr-2 md:mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                  </svg>
                  <span>Magang Industri</span>
                </div>
              </div>
              <button class="w-full bg-orange-500 hover:bg-red-500 text-white py-2 md:py-3 px-4 md:px-6 rounded-lg font-semibold transition-colors duration-300 group-hover:shadow-lg text-sm md:text-base">
                Daftar SMK
                <svg class="w-5 h-5 ml-2 inline" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4 11V13H16L10.5 18.5L11.92 19.92L19.84 12L11.92 4.08L10.5 5.5L16 11H4Z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

      </div>

      <!-- Info Section -->
      <div class="mt-10 md:mt-16 text-center">
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 max-w-3xl mx-auto">
          <h3 class="text-xl md:text-2xl font-bold text-gray-800 mb-3 md:mb-4">Informasi Penting</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 text-sm md:text-base text-gray-600">
            <div>
              <svg class="w-8 h-8 text-blue-500 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 3H18V1H16V3H8V1H6V3H5C3.89 3 3 3.89 3 5V19C3 20.11 3.89 21 5 21H19C20.11 21 21 20.11 21 19V5C21 3.89 20.11 3 19 3M19 19H5V8H19V19M7 10H12V15H7"/>
              </svg>
              <h4 class="font-semibold mb-1">Periode Pendaftaran</h4>
              <p>1 Januari - 31 Maret 2025</p>
            </div>
            <div>
              <svg class="w-8 h-8 text-purple-500 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6.62 10.79C8.06 13.62 10.38 15.94 13.21 17.38L15.41 15.18C15.69 14.9 16.08 14.82 16.43 14.93C17.55 15.3 18.75 15.5 20 15.5C20.55 15.5 21 15.95 21 16.5V20C21 20.55 20.55 21 20 21C10.61 21 3 13.39 3 4C3 3.45 3.45 3 4 3H7.5C8.05 3 8.5 3.45 8.5 4C8.5 5.25 8.7 6.45 9.07 7.57C9.18 7.92 9.1 8.31 8.82 8.59L6.62 10.79Z"/>
              </svg>
              <h4 class="font-semibold mb-1">Bantuan</h4>
              <p>+62 812-3456-7890</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
<Footer />