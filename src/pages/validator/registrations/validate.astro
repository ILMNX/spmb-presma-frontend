---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
---

<DashboardLayout title="Validasi Pendaftaran">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a
          href="/validator/registrations"
          class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
        </a>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Validasi Pendaftaran</h1>
          <p class="text-sm text-gray-500" id="registrationNumber">Loading...</p>
        </div>
      </div>
      <div id="statusBadge"></div>
    </div>

    <!-- Loading State -->
    <div id="loadingState" class="flex justify-center py-12">
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-purple-600"></div>
    </div>

    <!-- Error State -->
    <div id="errorState" class="hidden bg-red-50 border border-red-200 rounded-lg p-6 text-center">
      <svg class="w-12 h-12 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <h3 class="text-lg font-medium text-red-800 mb-2">Gagal memuat data</h3>
      <p class="text-red-600" id="errorMessage">Terjadi kesalahan</p>
      <button onclick="loadRegistration()" class="mt-4 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
        Coba Lagi
      </button>
    </div>

    <!-- Content -->
    <div id="contentState" class="hidden grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column: Student Info -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Student Card - Dynamic color based on school type -->
        <div id="studentCard" class="relative overflow-hidden rounded-2xl shadow-lg">
          <!-- Gradient Background -->
          <div id="cardGradient" class="absolute inset-0 bg-gradient-to-br from-purple-500 via-purple-600 to-indigo-700"></div>
          
          <!-- Glass Overlay -->
          <div class="absolute inset-0 bg-white/10 backdrop-blur-[2px]"></div>
          
          <!-- Decorative circles -->
          <div id="decorCircle1" class="absolute -top-10 -right-10 w-40 h-40 rounded-full bg-white/10"></div>
          <div id="decorCircle2" class="absolute -bottom-8 -left-8 w-32 h-32 rounded-full bg-white/10"></div>
          
          <!-- Content -->
          <div class="relative z-10 p-6">
            <!-- Header with avatar -->
            <div class="flex items-center gap-4 mb-6">
              <div id="avatarBg" class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center ring-2 ring-white/30">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-bold text-white drop-shadow-sm" id="studentName">-</h2>
                <p class="text-sm text-white/80" id="studentEmail">-</p>
              </div>
            </div>
            
            <!-- School Type Badge -->
            <div class="mb-4">
              <span id="schoolTypeBadge" class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold bg-white/20 text-white backdrop-blur-sm">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                <span id="registrationType">-</span>
              </span>
            </div>
            
            <!-- Info Grid -->
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-white/20">
                <span class="text-sm text-white/70 flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                  Jurusan
                </span>
                <span class="text-sm font-medium text-white" id="major">-</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-white/20">
                <span class="text-sm text-white/70 flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/>
                  </svg>
                  Asal Sekolah
                </span>
                <span class="text-sm font-medium text-white text-right max-w-[140px] truncate" id="previousSchool" title="">-</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-white/20">
                <span class="text-sm text-white/70 flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  HP Siswa
                </span>
                <span class="text-sm font-medium text-white" id="phoneStudent">-</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-white/20">
                <span class="text-sm text-white/70 flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                  HP Orang Tua
                </span>
                <span class="text-sm font-medium text-white" id="phoneParent">-</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span class="text-sm text-white/70 flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                  Pembayaran
                </span>
                <span id="paymentStatus">-</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Progress Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Progress Validasi</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Item Tervalidasi</span>
              <span class="text-lg font-bold text-purple-600" id="progressCount">0/5</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-purple-600 h-3 rounded-full transition-all duration-300" id="progressBar" style="width: 0%"></div>
            </div>
            <p class="text-xs text-gray-500 text-center" id="progressPercentage">0% selesai</p>
          </div>
        </div>
      </div>

      <!-- Right Column: Validation Checklist -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Validation Checklist Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Checklist Validasi</h3>
            <button
              id="validateAllBtn"
              onclick="validateAll()"
              class="px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Validasi Semua
            </button>
          </div>

          <div class="space-y-4" id="checklistContainer">
            <!-- Checklist items will be rendered here -->
          </div>
        </div>

        <!-- Validation Notes -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Catatan Validasi</h3>
          <textarea
            id="validationNotes"
            rows="4"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none"
            placeholder="Tambahkan catatan validasi jika diperlukan..."
          ></textarea>
          <div class="flex justify-end mt-4">
            <button
              onclick="saveNotes()"
              class="px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors"
            >
              Simpan Catatan
            </button>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center justify-between bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div>
            <p class="text-sm text-gray-500" id="actionHint">Setelah semua item tervalidasi (5/5), siswa akan otomatis diterima.</p>
          </div>
          <div class="flex gap-3">
            <button
              id="rejectBtn"
              onclick="rejectRegistration()"
              class="px-4 py-2 bg-red-100 text-red-700 text-sm font-medium rounded-lg hover:bg-red-200 transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Tolak Siswa
            </button>
            <button
              onclick="requestRevision()"
              class="px-4 py-2 bg-orange-100 text-orange-700 text-sm font-medium rounded-lg hover:bg-orange-200 transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              Minta Revisi
            </button>
          </div>
        </div>

        <!-- Approved/Rejected Status Banner -->
        <div id="statusBanner" class="hidden bg-green-50 border border-green-200 rounded-xl p-6 text-center">
          <div id="approvedBanner" class="hidden">
            <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-xl font-bold text-green-800 mb-2">Siswa Diterima! ðŸŽ‰</h3>
            <p class="text-green-600">Pendaftaran ini sudah disetujui dan siswa resmi diterima.</p>
          </div>
          <div id="rejectedBanner" class="hidden">
            <svg class="w-16 h-16 text-red-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-xl font-bold text-red-800 mb-2">Pendaftaran Ditolak</h3>
            <p class="text-red-600" id="rejectionReasonText">Alasan: -</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Rejection Modal -->
  <div id="rejectModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Tolak Pendaftaran</h3>
      <p class="text-sm text-gray-600 mb-4">Silakan masukkan alasan penolakan. Ini akan dicatat dan dikirim ke calon siswa.</p>
      <textarea
        id="rejectionReason"
        rows="4"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent resize-none"
        placeholder="Masukkan alasan penolakan..."
      ></textarea>
      <div class="flex justify-end gap-3 mt-4">
        <button
          onclick="closeRejectModal()"
          class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors"
        >
          Batal
        </button>
        <button
          onclick="confirmReject()"
          class="px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors"
        >
          Konfirmasi Tolak
        </button>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div id="toast" class="fixed bottom-4 right-4 transform translate-y-full opacity-0 transition-all duration-300 z-50">
    <div class="bg-gray-900 text-white px-6 py-3 rounded-lg shadow-lg flex items-center gap-3">
      <svg id="toastIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <span id="toastMessage">Berhasil</span>
    </div>
  </div>
</DashboardLayout>

<script>
  import api from '../../../lib/api';

  interface ValidationChecklist {
    [key: string]: {
      key: string;
      label: string;
      description: string;
      checked: boolean;
    };
  }

  interface Registration {
    id: number;
    registration_number: string;
    name: string;
    email: string;
    type: string;
    major: string;
    major_name: string;
    previous_school: string;
    phone_student: string;
    phone_parent: string;
    status: string;
    status_label: string;
    payment_status: string;
    payment_status_label: string;
    validation_status: string;
    validation_status_label: string;
    validation_checklist: ValidationChecklist;
    validation_progress: {
      checked: number;
      total: number;
      percentage: number;
      is_complete: boolean;
    };
    validation_notes: string | null;
    ready_for_test: boolean;
    rejection_reason?: string | null;
    approved_at?: string | null;
    rejected_at?: string | null;
  }

  let registration: Registration | null = null;
  let registrationId: string | null = null;

  // Get registration ID from URL
  // Supports: /validator/registrations/validate?id=123 or /validator/registrations/123/validate
  function getRegistrationId(): string | null {
    const path = window.location.pathname;
    const matches = path.match(/\/registrations\/(\d+)\/validate/);
    if (matches) return matches[1];
    
    const params = new URLSearchParams(window.location.search);
    return params.get('id');
  }

  // Show toast notification
  function showToast(message: string, type: 'success' | 'error' = 'success') {
    const toast = document.getElementById('toast')!;
    const toastMessage = document.getElementById('toastMessage')!;
    const toastIcon = document.getElementById('toastIcon')!;
    
    toastMessage.textContent = message;
    
    if (type === 'success') {
      toast.querySelector('div')!.className = 'bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg flex items-center gap-3';
      toastIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>';
    } else {
      toast.querySelector('div')!.className = 'bg-red-600 text-white px-6 py-3 rounded-lg shadow-lg flex items-center gap-3';
      toastIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
    }
    
    toast.classList.remove('translate-y-full', 'opacity-0');
    
    setTimeout(() => {
      toast.classList.add('translate-y-full', 'opacity-0');
    }, 3000);
  }

  // Load registration data
  async function loadRegistration() {
    registrationId = getRegistrationId();
    
    if (!registrationId) {
      showError('ID pendaftaran tidak valid');
      return;
    }

    document.getElementById('loadingState')!.classList.remove('hidden');
    document.getElementById('errorState')!.classList.add('hidden');
    document.getElementById('contentState')!.classList.add('hidden');

    try {
      const apiPath = `/api/validator/registrations/${registrationId}`;
      
      const response = await api.get(apiPath);
      
      // response.data contains the JSON from server: { success, data, message }
      if (response.data?.success && response.data?.data) {
        registration = response.data.data;
        renderRegistration();
        document.getElementById('loadingState')!.classList.add('hidden');
        document.getElementById('contentState')!.classList.remove('hidden');
      } else {
        showError(response.data?.message || 'Gagal memuat data pendaftaran');
      }
    } catch (error: any) {
      console.error('Load registration error:', error);
      showError(error.message || 'Terjadi kesalahan saat memuat data');
    }
  }

  // Show error state
  function showError(message: string) {
    document.getElementById('loadingState')!.classList.add('hidden');
    document.getElementById('contentState')!.classList.add('hidden');
    document.getElementById('errorState')!.classList.remove('hidden');
    document.getElementById('errorMessage')!.textContent = message;
  }

  // Render registration data
  function renderRegistration() {
    if (!registration) return;

    // Header
    document.getElementById('registrationNumber')!.textContent = registration.registration_number;
    
    // Status badge
    const statusColors: Record<string, string> = {
      pending: 'bg-gray-100 text-gray-700',
      partial: 'bg-yellow-100 text-yellow-700',
      complete: 'bg-green-100 text-green-700',
      revision_needed: 'bg-red-100 text-red-700'
    };
    const statusColor = statusColors[registration.validation_status] || 'bg-gray-100 text-gray-700';
    document.getElementById('statusBadge')!.innerHTML = `
      <span class="px-3 py-1 text-sm font-medium rounded-full ${statusColor}">
        ${registration.validation_status_label}
      </span>
    `;

    // Student info
    document.getElementById('studentName')!.textContent = registration.name;
    document.getElementById('studentEmail')!.textContent = registration.email;
    document.getElementById('registrationType')!.textContent = registration.type.toUpperCase();
    document.getElementById('major')!.textContent = registration.major_name || registration.major;
    
    const previousSchoolEl = document.getElementById('previousSchool')!;
    previousSchoolEl.textContent = registration.previous_school || '-';
    previousSchoolEl.title = registration.previous_school || '';
    
    document.getElementById('phoneStudent')!.textContent = registration.phone_student || '-';
    document.getElementById('phoneParent')!.textContent = registration.phone_parent || '-';
    
    // Update card color based on school type (SMA = purple, SMK = orange)
    updateCardColors(registration.type);
    
    // Payment status - Updated for glass effect card
    const paymentColors: Record<string, string> = {
      paid: 'bg-green-400/30 text-white border border-green-300/50',
      confirmed: 'bg-green-400/30 text-white border border-green-300/50',
      pending: 'bg-yellow-400/30 text-white border border-yellow-300/50',
      unpaid: 'bg-red-400/30 text-white border border-red-300/50',
      expired: 'bg-gray-400/30 text-white border border-gray-300/50'
    };
    const paymentColor = paymentColors[registration.payment_status] || 'bg-white/20 text-white';
    document.getElementById('paymentStatus')!.innerHTML = `
      <span class="px-2.5 py-1 text-xs font-semibold rounded-full backdrop-blur-sm ${paymentColor}">
        ${registration.payment_status_label}
      </span>
    `;

    // Progress
    const progress = registration.validation_progress;
    document.getElementById('progressCount')!.textContent = `${progress.checked}/${progress.total}`;
    document.getElementById('progressBar')!.style.width = `${progress.percentage}%`;
    document.getElementById('progressPercentage')!.textContent = `${progress.percentage}% selesai`;

    // Update progress bar color based on completion
    const progressBar = document.getElementById('progressBar')!;
    if (progress.is_complete) {
      progressBar.classList.remove('bg-purple-600', 'bg-yellow-500');
      progressBar.classList.add('bg-green-500');
    } else if (progress.checked > 0) {
      progressBar.classList.remove('bg-purple-600', 'bg-green-500');
      progressBar.classList.add('bg-yellow-500');
    }

    // Checklist
    renderChecklist();

    // Notes
    if (registration.validation_notes) {
      (document.getElementById('validationNotes') as HTMLTextAreaElement).value = registration.validation_notes;
    }

    // Update button states
    updateButtonStates();
  }

  // Update card colors based on school type
  function updateCardColors(schoolType: string) {
    const cardGradient = document.getElementById('cardGradient')!;
    const progressCount = document.getElementById('progressCount')!;
    const progressBar = document.getElementById('progressBar')!;
    
    // Remove existing gradient classes
    cardGradient.className = 'absolute inset-0';
    
    if (schoolType.toUpperCase() === 'SMK') {
      // Orange/Amber theme for SMK
      cardGradient.classList.add('bg-gradient-to-br', 'from-orange-400', 'via-orange-500', 'to-amber-600');
      progressCount.classList.remove('text-purple-600');
      progressCount.classList.add('text-orange-600');
      
      // Update progress bar default color
      if (!registration?.validation_progress.is_complete && registration?.validation_progress.checked === 0) {
        progressBar.classList.remove('bg-purple-600');
        progressBar.classList.add('bg-orange-600');
      }
    } else {
      // Purple/Indigo theme for SMA (default)
      cardGradient.classList.add('bg-gradient-to-br', 'from-purple-500', 'via-purple-600', 'to-indigo-700');
      progressCount.classList.remove('text-orange-600');
      progressCount.classList.add('text-purple-600');
      
      // Update progress bar default color
      if (!registration?.validation_progress.is_complete && registration?.validation_progress.checked === 0) {
        progressBar.classList.remove('bg-orange-600');
        progressBar.classList.add('bg-purple-600');
      }
    }
  }

  // Render checklist items
  function renderChecklist() {
    if (!registration) return;

    const container = document.getElementById('checklistContainer')!;
    const checklist = registration.validation_checklist;
    
    const icons: Record<string, string> = {
      payment: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>',
      personal_data: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>',
      documents: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>',
      photo: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>',
      files_complete: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>'
    };

    container.innerHTML = Object.entries(checklist).map(([key, item]) => `
      <div 
        class="flex items-center justify-between p-4 rounded-lg border-2 transition-all cursor-pointer ${item.checked ? 'border-green-500 bg-green-50' : 'border-gray-200 hover:border-purple-300 hover:bg-purple-50'}"
        onclick="toggleValidation('${item.key}', ${!item.checked})"
      >
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center ${item.checked ? 'bg-green-100' : 'bg-gray-100'}">
            <svg class="w-6 h-6 ${item.checked ? 'text-green-600' : 'text-gray-500'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              ${icons[key] || icons.documents}
            </svg>
          </div>
          <div>
            <h4 class="font-medium text-gray-900">${item.label}</h4>
            <p class="text-sm text-gray-500">${item.description}</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <span class="text-sm font-medium ${item.checked ? 'text-green-600' : 'text-gray-400'}">
            ${item.checked ? 'Valid' : 'Belum Valid'}
          </span>
          <div class="w-6 h-6 rounded-full border-2 flex items-center justify-center ${item.checked ? 'border-green-500 bg-green-500' : 'border-gray-300'}">
            ${item.checked ? '<svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>' : ''}
          </div>
        </div>
      </div>
    `).join('');
  }

  // Update button states
  function updateButtonStates() {
    if (!registration) return;

    const progress = registration.validation_progress;
    const validateAllBtn = document.getElementById('validateAllBtn') as HTMLButtonElement;
    const rejectBtn = document.getElementById('rejectBtn') as HTMLButtonElement;
    const approvedBanner = document.getElementById('approvedBanner');
    const rejectedBanner = document.getElementById('rejectedBanner');

    // Check if already approved or rejected
    const isApproved = registration.approved_at !== null;
    const isRejected = registration.rejected_at !== null;

    // Show/hide status banners
    if (approvedBanner) {
      if (isApproved) {
        approvedBanner.classList.remove('hidden');
      } else {
        approvedBanner.classList.add('hidden');
      }
    }
    if (rejectedBanner) {
      if (isRejected) {
        rejectedBanner.classList.remove('hidden');
        const rejectionReasonEl = document.getElementById('rejectionReasonText');
        if (rejectionReasonEl && registration.rejection_reason) {
          rejectionReasonEl.textContent = registration.rejection_reason;
        }
      } else {
        rejectedBanner.classList.add('hidden');
      }
    }

    // Hide all action buttons if already approved or rejected
    if (isApproved || isRejected) {
      validateAllBtn.classList.add('hidden');
      if (rejectBtn) rejectBtn.classList.add('hidden');
      return;
    }

    // Hide validate all if already complete
    if (progress.is_complete) {
      validateAllBtn.classList.add('hidden');
    } else {
      validateAllBtn.classList.remove('hidden');
    }

    // Show reject button
    if (rejectBtn) rejectBtn.classList.remove('hidden');
  }

  // Toggle validation item
  async function toggleValidation(field: string, value: boolean) {
    if (!registrationId) return;

    // Check if already approved/rejected
    if (registration && (registration.approved_at || registration.rejected_at)) {
      showToast('Pendaftaran sudah diproses', 'error');
      return;
    }

    try {
      const apiPath = `/api/validator/registrations/${registrationId}/toggle-validation`;
      
      const response = await api.post(apiPath, { field, value });
      
      if (response.data?.success) {
        // Update local data
        if (registration && registration.validation_checklist) {
          const key = field.replace('validation_', '');
          if (registration.validation_checklist[key]) {
            registration.validation_checklist[key].checked = value;
          }
          registration.validation_status = response.data.data.validation_status;
          registration.validation_progress = response.data.data.validation_progress;
          
          // Check if auto-approved
          if (response.data.data.auto_approved) {
            registration.approved_at = response.data.data.approved_at;
          }
        }
        
        renderChecklist();
        renderProgress();
        updateButtonStates();
        updateStatusBadge();
        
        // Show celebration if auto-approved
        if (response.data.data.auto_approved) {
          showToast('ðŸŽ‰ Selamat! Siswa telah DITERIMA secara otomatis!', 'success');
        } else {
          showToast(value ? 'Item berhasil divalidasi' : 'Validasi item dibatalkan');
        }
      } else {
        showToast(response.data?.message || 'Gagal memperbarui validasi', 'error');
      }
    } catch (error: any) {
      console.error('Toggle validation error:', error);
      showToast(error.message || 'Terjadi kesalahan', 'error');
    }
  }

  // Render progress only
  function renderProgress() {
    if (!registration) return;

    const progress = registration.validation_progress;
    document.getElementById('progressCount')!.textContent = `${progress.checked}/${progress.total}`;
    document.getElementById('progressBar')!.style.width = `${progress.percentage}%`;
    document.getElementById('progressPercentage')!.textContent = `${progress.percentage}% selesai`;

    const progressBar = document.getElementById('progressBar')!;
    if (progress.is_complete) {
      progressBar.classList.remove('bg-purple-600', 'bg-yellow-500');
      progressBar.classList.add('bg-green-500');
    } else if (progress.checked > 0) {
      progressBar.classList.remove('bg-purple-600', 'bg-green-500');
      progressBar.classList.add('bg-yellow-500');
    }
  }

  // Update status badge
  function updateStatusBadge() {
    if (!registration) return;

    const statusColors: Record<string, string> = {
      pending: 'bg-gray-100 text-gray-700',
      partial: 'bg-yellow-100 text-yellow-700',
      complete: 'bg-green-100 text-green-700',
      revision_needed: 'bg-red-100 text-red-700'
    };
    
    const labels: Record<string, string> = {
      pending: 'Belum Divalidasi',
      partial: 'Sebagian Valid',
      complete: 'Validasi Lengkap',
      revision_needed: 'Perlu Revisi'
    };
    
    const statusColor = statusColors[registration.validation_status] || 'bg-gray-100 text-gray-700';
    const label = labels[registration.validation_status] || registration.validation_status;
    
    document.getElementById('statusBadge')!.innerHTML = `
      <span class="px-3 py-1 text-sm font-medium rounded-full ${statusColor}">
        ${label}
      </span>
    `;
  }

  // Validate all items
  async function validateAll() {
    if (!registrationId || !registration) return;

    // Check if already approved/rejected
    if (registration.approved_at || registration.rejected_at) {
      showToast('Pendaftaran sudah diproses', 'error');
      return;
    }

    if (registration.payment_status !== 'paid') {
      showToast('Pembayaran belum dikonfirmasi', 'error');
      return;
    }

    try {
      const apiPath = `/api/validator/registrations/${registrationId}/complete-validation`;
      
      const response = await api.post(apiPath);
      
      if (response.data?.success) {
        registration = response.data.data;
        renderRegistration();
        
        // Check if auto-approved
        if (response.data.data.auto_approved) {
          showToast('ðŸŽ‰ Selamat! Siswa telah DITERIMA secara otomatis!', 'success');
        } else {
          showToast('Semua item berhasil divalidasi');
        }
      } else {
        showToast(response.data?.message || 'Gagal memvalidasi semua item', 'error');
      }
    } catch (error: any) {
      console.error('Validate all error:', error);
      showToast(error.message || 'Terjadi kesalahan', 'error');
    }
  }

  // Save notes
  async function saveNotes() {
    if (!registrationId) return;

    const notes = (document.getElementById('validationNotes') as HTMLTextAreaElement).value;

    try {
      const apiPath = `/api/validator/registrations/${registrationId}/validation-checklist`;
      
      const response = await api.put(apiPath, { validation_notes: notes });
      
      if (response.data?.success) {
        showToast('Catatan berhasil disimpan');
      } else {
        showToast(response.data?.message || 'Gagal menyimpan catatan', 'error');
      }
    } catch (error: any) {
      console.error('Save notes error:', error);
      showToast(error.message || 'Terjadi kesalahan', 'error');
    }
  }

  // Request revision
  async function requestRevision() {
    if (!registrationId) return;

    const notes = (document.getElementById('validationNotes') as HTMLTextAreaElement).value;
    
    if (!notes.trim()) {
      showToast('Silakan isi catatan revisi terlebih dahulu', 'error');
      (document.getElementById('validationNotes') as HTMLTextAreaElement).focus();
      return;
    }

    if (!confirm('Apakah Anda yakin ingin meminta revisi untuk pendaftaran ini?')) {
      return;
    }

    try {
      const apiPath = `/api/validator/registrations/${registrationId}/request-revision`;
      
      const response = await api.post(apiPath, { notes });
      
      if (response.data?.success) {
        showToast('Permintaan revisi berhasil dikirim');
        setTimeout(() => {
          window.location.href = '/validator/registrations';
        }, 1500);
      } else {
        showToast(response.data?.message || 'Gagal mengirim permintaan revisi', 'error');
      }
    } catch (error: any) {
      console.error('Request revision error:', error);
      showToast(error.message || 'Terjadi kesalahan', 'error');
    }
  }

  // Open reject modal
  function rejectRegistration() {
    const modal = document.getElementById('rejectModal');
    if (modal) {
      modal.classList.remove('hidden');
      (document.getElementById('rejectReason') as HTMLTextAreaElement).value = '';
      (document.getElementById('rejectReason') as HTMLTextAreaElement).focus();
    }
  }

  // Close reject modal
  function closeRejectModal() {
    const modal = document.getElementById('rejectModal');
    if (modal) {
      modal.classList.add('hidden');
    }
  }

  // Confirm reject
  async function confirmReject() {
    if (!registrationId) return;

    const reason = (document.getElementById('rejectReason') as HTMLTextAreaElement).value.trim();
    
    if (!reason) {
      showToast('Silakan isi alasan penolakan', 'error');
      (document.getElementById('rejectReason') as HTMLTextAreaElement).focus();
      return;
    }

    try {
      const apiPath = `/api/validator/registrations/${registrationId}/reject`;
      
      const response = await api.post(apiPath, { rejection_reason: reason });
      
      if (response.data?.success) {
        closeRejectModal();
        showToast('Pendaftaran berhasil ditolak');
        
        // Update local data
        if (registration) {
          registration.rejected_at = response.data.data.rejected_at;
          registration.rejection_reason = reason;
        }
        
        updateButtonStates();
        
        setTimeout(() => {
          window.location.href = '/validator/registrations';
        }, 1500);
      } else {
        showToast(response.data?.message || 'Gagal menolak pendaftaran', 'error');
      }
    } catch (error: any) {
      console.error('Reject registration error:', error);
      showToast(error.message || 'Terjadi kesalahan', 'error');
    }
  }

  // Expose functions to window
  (window as any).loadRegistration = loadRegistration;
  (window as any).toggleValidation = toggleValidation;
  (window as any).validateAll = validateAll;
  (window as any).saveNotes = saveNotes;
  (window as any).requestRevision = requestRevision;
  (window as any).rejectRegistration = rejectRegistration;
  (window as any).closeRejectModal = closeRejectModal;
  (window as any).confirmReject = confirmReject;

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', loadRegistration);
</script>
