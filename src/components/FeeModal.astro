---
const { fees } = Astro.props;
---

<!-- Modal Backdrop -->
<div 
  id="feeModal" 
  class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden opacity-0 transition-opacity duration-300"
  data-modal-backdrop
>
  <!-- Modal Content -->
  <div 
    class="flex items-center justify-center min-h-screen p-4"
    data-modal-content
  >
    <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto transform scale-95 transition-transform duration-300">
      <!-- Modal Header -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 rounded-t-xl">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">Tabel Biaya Pendidikan</h2>
          <button 
            data-modal-close
            class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-gray-100 rounded-full"
            aria-label="Tutup modal"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Modal Body -->
      <div class="p-6">
        <!-- Desktop Table -->
        <div class="hidden md:block overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-blue-50 border-b border-blue-200">
                <th class="px-6 py-4 text-left text-sm font-semibold text-blue-900">Komponen Biaya</th>
                <th class="px-6 py-4 text-right text-sm font-semibold text-blue-900">Jumlah</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-blue-900">Keterangan</th>
              </tr>
            </thead>
            <tbody>
              {fees.map((fee: any, index: number) => (
                <tr class={`border-b border-gray-200 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'} hover:bg-blue-50 transition-colors`}>
                  <td class="px-6 py-4 font-medium text-gray-900">{fee.title}</td>
                  <td class="px-6 py-4 text-right font-bold text-blue-600">
                    Rp {fee.amount.toLocaleString('id-ID')}
                  </td>
                  <td class="px-6 py-4 text-gray-600 text-sm">
                    {fee.description || '-'}
                    {fee.payment_options && (
                      <div class="mt-2 space-y-1">
                        {fee.payment_options.map((option: string) => (
                          <div class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full inline-block mr-1">
                            {option}
                          </div>
                        ))}
                      </div>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
            <tfoot>
              <tr class="bg-blue-100 border-t-2 border-blue-300">
                <td class="px-6 py-4 font-bold text-blue-900">Total Biaya</td>
                <td class="px-6 py-4 text-right font-bold text-blue-900 text-lg">
                  Rp {fees.reduce((sum: number, fee: any) => sum + fee.amount, 0).toLocaleString('id-ID')}
                </td>
                <td class="px-6 py-4 text-blue-700 text-sm">
                  *Biaya dapat dicicil sesuai kesepakatan
                </td>
              </tr>
            </tfoot>
          </table>
        </div>

        <!-- Mobile Cards -->
        <div class="md:hidden space-y-4">
          {fees.map((fee: any) => (
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-medium text-gray-900 flex-1">{fee.title}</h3>
                <span class="font-bold text-blue-600 text-lg ml-2">
                  Rp {fee.amount.toLocaleString('id-ID')}
                </span>
              </div>
              {fee.description && (
                <p class="text-gray-600 text-sm mb-2">{fee.description}</p>
              )}
              {fee.payment_options && (
                <div class="flex flex-wrap gap-1">
                  {fee.payment_options.map((option: string) => (
                    <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">
                      {option}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))}
          
          <div class="bg-blue-100 rounded-lg p-4 border-2 border-blue-300">
            <div class="flex justify-between items-center">
              <span class="font-bold text-blue-900">Total Biaya</span>
              <span class="font-bold text-blue-900 text-lg">
                Rp {fees.reduce((sum: number, fee: any) => sum + fee.amount, 0).toLocaleString('id-ID')}
              </span>
            </div>
            <p class="text-blue-700 text-sm mt-2">*Biaya dapat dicicil sesuai kesepakatan</p>
          </div>
        </div>

        <!-- Additional Info -->
        <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <h4 class="font-semibold text-yellow-800 mb-2">Informasi Penting:</h4>
          <ul class="text-yellow-700 text-sm space-y-1">
            <li>• Biaya sudah termasuk seragam dan perlengkapan sekolah</li>
            <li>• Tersedia program cicilan dengan bunga 0%</li>
            <li>• Diskon khusus untuk pendaftar gelombang pertama</li>
            <li>• Biaya dapat berubah sewaktu-waktu tanpa pemberitahuan sebelumnya</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>