---
const { supports } = Astro.props;
---

<!-- Modal Backdrop -->
<div 
  id="supportModal" 
  class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden opacity-0 transition-opacity duration-300"
  onclick="closeModal('supportModal')"
>
  <!-- Modal Content -->
  <div 
    class="flex items-center justify-center min-h-screen p-4"
    onclick="event.stopPropagation()"
  >
    <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto transform scale-95 transition-transform duration-300">
      <!-- Modal Header -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 rounded-t-xl">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">Program Dukungan Pendidikan</h2>
          <button 
            onclick="closeModal('supportModal')"
            class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-gray-100 rounded-full"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Modal Body -->
      <div class="p-6">
        <div class="grid gap-6">
          {supports.map((support: any) => (
            <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-xl p-6 border border-green-200">
              <!-- Program Header -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-blue-500 rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-gray-900">{support.name}</h3>
                    {support.contact_info && (
                      <p class="text-green-600 font-medium text-sm">{support.contact_info}</p>
                    )}
                  </div>
                </div>
              </div>

              <!-- Program Description -->
              <div class="mb-4">
                <h4 class="font-semibold text-gray-800 mb-2">Deskripsi Program:</h4>
                <p class="text-gray-700 leading-relaxed">{support.description}</p>
              </div>

              <!-- Requirements -->
              {support.requirements && (
                <div class="bg-white bg-opacity-70 rounded-lg p-4">
                  <h4 class="font-semibold text-gray-800 mb-2 flex items-center">
                    <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    Syarat & Cara Mendaftar:
                  </h4>
                  <div class="text-gray-700 text-sm">
                    {support.requirements.split('\n').map((line: string) => (
                      line.trim() && <p class="mb-1">â€¢ {line}</p>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>

        <!-- Contact Section -->
        <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <h4 class="font-semibold text-blue-800 mb-2">Butuh Bantuan?</h4>
          <p class="text-blue-700 text-sm mb-2">
            Hubungi kami untuk informasi lebih lanjut tentang program dukungan pendidikan:
          </p>
          <div class="flex flex-col sm:flex-row gap-2">
            <a 
              href="tel:+621234567890" 
              class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
              Telepon
            </a>
            <a 
              href="mailto:info@prestasiprima.sch.id" 
              class="inline-flex items-center justify-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
              Email
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>