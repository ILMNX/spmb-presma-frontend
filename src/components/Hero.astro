<!-- Registration Steps Modal -->
<div id="registrationModal" class="hidden fixed inset-0 z-50 overflow-y-auto">
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm transition-opacity"></div>
  
  <!-- Modal Content -->
  <div class="flex min-h-screen items-center justify-center p-4">
    <div class="relative bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
      <!-- Modal Header -->
      <div class="sticky top-0 bg-gradient-to-r from-blue-600 to-purple-600 text-white p-6 rounded-t-2xl z-10">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-2xl md:text-3xl font-bold mb-2">Alur Pendaftaran</h3>
            <p class="text-blue-100">Ikuti langkah-langkah berikut untuk mendaftar</p>
          </div>
          <button 
            id="closeRegistrationModal"
            class="text-white hover:bg-white/20 rounded-full p-2 transition-colors"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Modal Body -->
      <div class="p-6 md:p-8">
        <!-- Desktop Steps -->
        <div class="hidden md:grid grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          {registrationSteps.map((step) => (
            <div class="relative bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-md hover:shadow-lg p-6 border border-gray-200 transition-all duration-300 hover:-translate-y-1">
              <div class="absolute -top-3 -right-3 w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 text-white rounded-full flex items-center justify-center text-lg font-bold shadow-lg">
                {step.step}
              </div>
              <div class="mb-4">
                <span class="text-4xl">{step.emoji}</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h4>
              <p class="text-gray-600 text-sm leading-relaxed">{step.description}</p>
            </div>
          ))}
        </div>

        <!-- Mobile Steps -->
        <div class="md:hidden space-y-4 mb-8">
          {registrationSteps.map((step) => (
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-lg shadow-md p-4 border border-gray-200">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 flex flex-col items-center">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 text-white rounded-full flex items-center justify-center text-sm font-bold shadow-lg mb-2">
                    {step.step}
                  </div>
                  <span class="text-3xl">{step.emoji}</span>
                </div>
                <div class="flex-1">
                  <h4 class="text-base font-bold text-gray-900 mb-1">{step.title}</h4>
                  <p class="text-gray-600 text-sm leading-relaxed">{step.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA Section -->
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-6 border border-blue-200">
          <div class="text-center">
            <h4 class="text-xl font-bold text-gray-900 mb-2">Siap Untuk Mendaftar?</h4>
            <p class="text-gray-600 mb-4">Jangan lewatkan kesempatan untuk bergabung dengan kami</p>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <a 
                href="/pendaftaran"
                class="inline-flex items-center justify-center bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
                </svg>
                Daftar Sekarang
              </a>
              <a 
                href="#lokasi-akses"
                class="inline-flex items-center justify-center bg-white border-2 border-blue-600 text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-all duration-300"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                Hubungi Kami
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom scrollbar for timeline */
  .overflow-y-auto::-webkit-scrollbar {
    width: 6px;
  }
  
  .overflow-y-auto::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }
  
  .overflow-y-auto::-webkit-scrollbar-thumb {
    background: #cbd5e0;
    border-radius: 10px;
  }
  
  .overflow-y-auto::-webkit-scrollbar-thumb:hover {
    background: #a0aec0;
  }

  /* Modal animations */
  #registrationModal:not(.hidden) {
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Slideshow indicator active state */
  .slideshow-indicator.active {
    background-color: white;
    width: 3rem;
  }
</style>

<script>
  // Interfaces
  interface Timeline {
    id: number;
    wave: string;
    status: string;
    formatted_start_date: string;
    formatted_end_date: string;
    days_remaining?: number;
  }

  // API Config
  const API_URL = import.meta.env.PUBLIC_API_URL;

  // ===== SLIDESHOW FUNCTIONALITY =====
  let currentSlide = 0;
  let slideshowInterval: number;

  function initSlideshow() {
    const slides = document.querySelectorAll('[data-slide]');
    const indicators = document.querySelectorAll('.slideshow-indicator');
    
    if (slides.length <= 1) return;

    function showSlide(index: number) {
      slides.forEach((slide) => {
        (slide as HTMLElement).style.opacity = '0';
      });

      indicators.forEach((indicator) => {
        indicator.classList.remove('active');
      });

      if (slides[index]) {
        (slides[index] as HTMLElement).style.opacity = '100';
      }

      if (indicators[index]) {
        indicators[index].classList.add('active');
      }
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    }

    slideshowInterval = window.setInterval(nextSlide, 5000);

    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        clearInterval(slideshowInterval);
        currentSlide = index;
        showSlide(currentSlide);
        slideshowInterval = window.setInterval(nextSlide, 5000);
      });
    });

    const heroSection = document.getElementById('hero-section');
    heroSection?.addEventListener('mouseenter', () => {
      clearInterval(slideshowInterval);
    });

    heroSection?.addEventListener('mouseleave', () => {
      slideshowInterval = window.setInterval(nextSlide, 5000);
    });
  }

  // ===== TIMELINE FUNCTIONALITY =====
  function getStatusText(status: string): string {
    switch(status) {
      case 'active': return 'Sedang Berlangsung';
      case 'upcoming': return 'Akan Datang';
      case 'completed': return 'Selesai';
      default: return 'Belum Dimulai';
    }
  }

  function renderTimeline(timeline: Timeline): string {
    const statusColor = timeline.status === 'active' 
      ? 'bg-green-50 border-green-500' 
      : timeline.status === 'completed' 
      ? 'bg-blue-50 border-blue-500' 
      : 'bg-gray-50 border-gray-300';

    const badgeColor = timeline.status === 'active' 
      ? 'bg-green-100 text-green-800' 
      : timeline.status === 'completed' 
      ? 'bg-blue-100 text-blue-800' 
      : 'bg-gray-100 text-gray-800';

    const pulseIndicator = timeline.status === 'active' 
      ? '<span class="w-2 h-2 bg-green-600 rounded-full mr-1.5 animate-pulse"></span>' 
      : '';

    const daysRemaining = timeline.status === 'active' && (timeline.days_remaining ?? 0) > 0
      ? `<span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium">
          ${Math.ceil(timeline.days_remaining!)} hari tersisa
         </span>`
      : '';

    return `
      <div class="relative p-4 rounded-xl border-l-4 transition-all duration-300 hover:shadow-md ${statusColor}">
        <div class="flex items-start justify-between mb-2">
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold ${badgeColor}">
            ${pulseIndicator}
            ${getStatusText(timeline.status)}
          </span>
          ${daysRemaining}
        </div>
        <h4 class="text-lg font-bold text-gray-900 mb-1">${timeline.wave}</h4>
        <div class="flex items-center text-gray-600 text-sm mb-2">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span class="font-medium">
            ${timeline.formatted_start_date} - ${timeline.formatted_end_date}
          </span>
        </div>
      
      </div>
    `;
  }

  async function fetchTimeline() {
    const loadingEl = document.getElementById('timeline-loading');
    const contentEl = document.getElementById('timeline-content');
    const emptyEl = document.getElementById('timeline-empty');
    const errorEl = document.getElementById('timeline-error');

    try {
      loadingEl?.classList.remove('hidden');
      contentEl?.classList.add('hidden');
      emptyEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');

      const response = await fetch(`${API_URL}/api/timeline`);
      
      if (!response.ok) {
        throw new Error('Failed to fetch timeline');
      }

      const data = await response.json();
      const timelines: Timeline[] = data.data || [];

      loadingEl?.classList.add('hidden');

      if (timelines.length === 0) {
        emptyEl?.classList.remove('hidden');
      } else {
        if (contentEl) {
          contentEl.innerHTML = `
            <div class="space-y-4">
              ${timelines.map(renderTimeline).join('')}
            </div>
          `;
          contentEl.classList.remove('hidden');
        }
      }
    } catch (error) {
      console.error('Error fetching timeline:', error);
      loadingEl?.classList.add('hidden');
      errorEl?.classList.remove('hidden');
    }
  }

  // ===== MODAL FUNCTIONALITY =====
  const modal = document.getElementById('registrationModal');
  const openBtn = document.getElementById('openRegistrationModal');
  const closeBtn = document.getElementById('closeRegistrationModal');
  const retryBtn = document.getElementById('timeline-retry');

  function openModal() {
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  openBtn?.addEventListener('click', openModal);
  closeBtn?.addEventListener('click', closeModal);
  retryBtn?.addEventListener('click', fetchTimeline);

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal();
    }
  });

  // ===== SCHOOL INFO MODAL (NEW) =====
  const schoolInfoModal = document.getElementById('schoolInfoModal');
  const openSchoolInfoBtn = document.getElementById('openSchoolInfoModal');
  const closeSchoolInfoBtn = document.getElementById('closeSchoolInfoModal');
  const schoolInfoBackdrop = document.getElementById('schoolInfoBackdrop');

  function openSchoolInfoModal() {
    schoolInfoModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeSchoolInfoModal() {
    schoolInfoModal?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  openSchoolInfoBtn?.addEventListener('click', openSchoolInfoModal);
  closeSchoolInfoBtn?.addEventListener('click', closeSchoolInfoModal);
  schoolInfoBackdrop?.addEventListener('click', closeSchoolInfoModal);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !schoolInfoModal?.classList.contains('hidden')) {
      closeSchoolInfoModal();
    }
  });

  // ===== INITIALIZE =====
  initSlideshow();
  fetchTimeline();
</script>
