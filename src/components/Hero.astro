  <div class="absolute inset-0 bg-black/70 backdrop-blur-sm" id="schoolInfoBackdrop"></div>
  
  <div class="relative z-10 flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-4xl w-full">
      <!-- Modal Header -->
      <div class="bg-blue-600 p-6 rounded-t-2xl">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">Informasi Sekolah</h3>
            <p class="text-white/90">Kunjungi website resmi sekolah kami</p>
          </div>
          <button id="closeSchoolInfoModal" class="text-white hover:bg-white/20 rounded-full p-2 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Modal Body -->
      <div class="p-6 md:p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          
          <!-- SMA Card -->
          <div class="group cursor-pointer" onclick="window.open('https://sma.prestasiprima.sch.id', '_blank')">
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-2 border-purple-200">
              <div class="bg-gradient-to-r from-purple-500 to-purple-700 p-6 rounded-t-2xl text-white">
                <div class="flex items-center justify-center mb-4">
                  <div class="bg-white bg-opacity-20 p-4 rounded-full">
                    <img src="/logo/sma.png" alt="Logo SMA" class="w-20 h-20 object-contain" />
                  </div>
                </div>
                <h4 class="text-2xl font-bold text-center mb-2">SMA Prestasi Prima</h4>
                <p class="text-white text-center">Sekolah Menengah Atas</p>
              </div>
              <div class="p-6">
                <div class="space-y-3 mb-6">
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 text-purple-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
                    </svg>
                    <span>Program IPA & IPS</span>
                  </div>
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 text-red-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
