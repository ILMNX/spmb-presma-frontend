---
const { hero } = Astro.props;

// Fallback values jika hero tidak ada
const defaultHero = {
  title: 'Selamat Datang di Prestasi Prima',
  subtitle: 'Membangun Generasi Unggul untuk Masa Depan',
  description: 'Prestasi Prima adalah lembaga pendidikan yang berkomitmen mengembangkan potensi siswa.',
  background_images: [
    '/images/sekolah_ls.webp',
    '/images/perpus.webp',
    '/images/perpus_2.webp',
    '/images/perpus_3.webp',
    '/images/lab_komputer.webp',
    '/images/kelas_bagus.webp',
    '/images/belajar_komputer.webp',
    '/images/lapangan.webp'
  ],
  cta_primary_text: 'Daftar Sekarang',
  cta_primary_link: '/pendaftaran',
  cta_secondary_text: 'Pelajari Lebih Lanjut',
  cta_secondary_link: '#'
};

const heroData = hero || defaultHero;

// Registration steps data
const registrationSteps = [
  {
    step: 1,
    title: "Isi Formulir Online",
    description: "Lengkapi data diri dan pilih program studi yang diinginkan melalui portal pendaftaran digital kami.",
    emoji: "üìù",
    color: "blue"
  },
  {
    step: 2,
    title: "Upload Dokumen",
    description: "Unggah dokumen persyaratan seperti KTP/KK dan raport dengan mudah dan aman.",
    emoji: "üì§",
    color: "green"
  },
  {
    step: 3,
    title: "Pembayaran Formulir",
    description: "Lakukan pembayaran biaya pendaftaran melalui Virtual Account BRI. Konfirmasi otomatis setelah pembayaran.",
    emoji: "üí≥",
    color: "yellow"
  },
  {
    step: 4,
    title: "Konfirmasi & Akun Login",
    description: "Setelah pembayaran terkonfirmasi, Anda akan mendapatkan akun login untuk memantau status pendaftaran.",
    emoji: "üîë",
    color: "purple"
  },
  {
    step: 5,
    title: "Tes & Observasi",
    description: "Ikuti tes masuk dan observasi sesuai program yang dipilih.",
    emoji: "üßë‚Äçüíª",
    color: "indigo"
  },
  {
    step: 6,
    title: "Pengumuman & Daftar Ulang",
    description: "Cek pengumuman hasil seleksi dan lakukan daftar ulang jika diterima.",
    emoji: "üéâ",
    color: "orange"
  }
];
---

<section 
  id="hero-section"
  class="relative min-h-screen flex items-center bg-cover bg-center bg-no-repeat py-12 md:py-20 transition-all duration-1000 ease-in-out overflow-hidden"
>
  <!-- Multiple Background Images for Slideshow -->
  {heroData.background_images.map((image: string, index: number) => (
    <div 
      class={`absolute inset-0 bg-cover bg-center bg-no-repeat transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
      data-slide={index}
      style={`background-image: url('${image}')`}
    />
  ))}
  
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black bg-opacity-70"></div>
  
  <!-- Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
      
      <!-- Left Side - Hero Content -->
      <div class="text-white">
        <h1 class="text-3xl md:text-5xl lg:text-6xl mt-8 font-bold mb-4 leading-tight">
          {heroData.title}
        </h1>
        
        <h2 class="text-lg md:text-xl lg:text-2xl font-light mb-6 text-gray-200">
          {heroData.subtitle}
        </h2>
        
        <p class="text-base md:text-lg lg:text-xl mb-8 leading-relaxed text-gray-100">
          {heroData.description}
        </p>
        
        <!-- CTA Buttons -->
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-2 gap-3 sm:gap-4">
          <!-- Daftar Sekarang Card -->
          <a 
            href={heroData.cta_primary_link}
            class="group relative bg-gradient-to-br from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-xl p-4 sm:p-5 lg:p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden"
          >
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
              <div class="absolute inset-0 bg-white rounded-full blur-3xl transform -translate-x-1/2 -translate-y-1/2"></div>
            </div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-2 sm:mb-3">
                <div class="bg-white/20 p-1.5 sm:p-2 rounded-lg">
                  <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white/80 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4 11V13H16L10.5 18.5L11.92 19.92L19.84 12L11.92 4.08L10.5 5.5L16 11H4Z"/>
                </svg>
              </div>
              <h3 class="text-white font-bold text-base sm:text-lg mb-0.5 sm:mb-1">{heroData.cta_primary_text}</h3>
              <p class="text-blue-100 text-xs sm:text-sm">Mulai pendaftaran online</p>
            </div>
          </a>

          <!-- Pelajari Lebih Lanjut Card -->
          <button 
            id="openSchoolInfoModal"
            class="group relative bg-gradient-to-br from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 rounded-xl p-4 sm:p-5 lg:p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden text-left"
          >
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
              <div class="absolute inset-0 bg-white rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
            </div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-2 sm:mb-3">
                <div class="bg-white/20 p-1.5 sm:p-2 rounded-lg">
                  <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white/80 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4 11V13H16L10.5 18.5L11.92 19.92L19.84 12L11.92 4.08L10.5 5.5L16 11H4Z"/>
                </svg>
              </div>
              <h3 class="text-white font-bold text-base sm:text-lg mb-0.5 sm:mb-1">{heroData.cta_secondary_text}</h3>
              <p class="text-purple-100 text-xs sm:text-sm">Kunjungi website sekolah</p>
            </div>
          </button>
        </div>
      </div>

      <!-- Right Side - Timeline -->
      <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl p-4 sm:p-6 lg:p-8 max-h-[500px] sm:max-h-[600px] overflow-y-auto">
        <div class="flex items-center justify-between mb-4 sm:mb-6">
          <h3 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">Timeline Pendaftaran</h3>
          <svg class="w-6 h-6 sm:w-8 sm:h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>

        <!-- Loading State -->
        <div id="timeline-loading" class="space-y-4">
          {[1, 2, 3].map(() => (
            <div class="animate-pulse">
              <div class="bg-gray-200 h-24 rounded-xl"></div>
            </div>
          ))}
        </div>

        <!-- Timeline Content (akan diisi via JS) -->
        <div id="timeline-content" class="hidden"></div>

        <!-- Empty State -->
        <div id="timeline-empty" class="hidden text-center py-12">
          <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-gray-500 text-lg font-medium">Data timeline belum tersedia</p>
          <p class="text-gray-400 text-sm mt-2">Silakan hubungi admin untuk informasi jadwal</p>
        </div>

        <!-- Error State -->
        <div id="timeline-error" class="hidden text-center py-12">
          <svg class="w-16 h-16 mx-auto text-red-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-red-500 text-lg font-medium">Gagal memuat timeline</p>
          <button id="timeline-retry" class="mt-4 text-blue-600 hover:text-blue-700 font-semibold">
            Coba Lagi
          </button>
        </div>

        <!-- Quick Info -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-3 text-sm">
          
            <div class="flex items-center gap-2">
              <span class="text-gray-600">Butuh bantuan?</span>
              <a href="#lokasi-akses" class="text-blue-600 hover:text-blue-700 font-semibold flex items-center">
                Hubungi Kami
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- School Info Modal (NEW) -->
